<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="ru.inhell.aida.quotes.AllTradeBean">
    <resultMap id="allTradeResultMap" type="ru.inhell.aida.entity.AllTrade">
        <id column="id" property="id"/>
        <result column="date" property="date"/>
        <result column="time" property="time"/>
        <result column="price" property="price"/>
        <result column="quantity" property="quantity"/>
        <result column="symbol" property="symbol"/>
        <result column="transaction" property="transaction"/>
        <result column="transaction_id" property="transaction_id"/>
        <result column="volume" property="volume"/>
    </resultMap>

    <select id="selectAllTrades" resultMap="allTradeResultMap" parameterType="ru.inhell.aida.entity.AllTradeFilter">
        select * from `all_trades` where `symbol` = #{symbol}  limit #{start}, #{count}
    </select>

    <select id="selectAllTradesCount" resultType="long" parameterType="string">
        select count(*) from `all_trades` where `symbol` = #{symbol}
    </select>
</mapper>